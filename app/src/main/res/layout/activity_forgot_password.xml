<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.ForgotPasswordActivity"

    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:adjustViewBounds="true"
        android:src="@drawable/forg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên Mật Khẩu"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Nhập email của bạn để nhận mã xác minh"
        android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/emailFgot"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/roud_back_dark_blue5_15"
        android:hint="Email"
        android:maxLines="1"
        android:inputType="text"
        android:textSize="16sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/forgotBtn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Gửi Mã Xác Nhận"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:background="@drawable/roud_back_primary_15"
        android:textColor="#FDBA38"/>

    <TextView
        android:id="@+id/returnFgot"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@color/primary"
        android:textSize="20sp"
        android:textColor="#FDBA38"
        android:layout_marginTop="110dp"
        android:layout_marginStart="10dp"
        android:drawableLeft="@drawable/sharp_arrow_back_24"
        />

</LinearLayout>