<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:layout_marginHorizontal="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    >

    <LinearLayout
        android:id="@+id/admin_feedback_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/admin_feedback_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/baseline_user_24"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/admin_feedback_name_user"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tên người dùng"
                    android:textSize="16dp"
                    android:maxLines="1"
                    android:layout_weight="2.8"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/admin_feedback_time_feedback"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="25/10/2024"
                    android:paddingRight="5dp"
                    android:gravity="right"
                    android:maxLines="1"
                    android:textColor="@color/darker_gray"
                    />

            </LinearLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/admin_feedback_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nội dung phản hồi"
                android:maxLines="3"
                android:paddingRight="5dp"/>

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>