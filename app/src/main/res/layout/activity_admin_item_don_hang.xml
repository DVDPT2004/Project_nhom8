<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/admin_order_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_background3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="30dp"
            android:paddingTop="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Mã đơn hàng:"
                    android:textStyle="italic"
                    android:textColor="#818181"/>
                <TextView
                    android:id="@+id/admin_order_madonhang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:textStyle="bold"
                    android:text="Mã đơn hàng"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Tên khách hàng:"
                    android:textStyle="italic"
                    android:textColor="#818181"/>
                <TextView
                    android:id="@+id/admin_order_tenkhachhang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:textStyle="bold"
                    android:text="Tên khách hàng"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Số điện thoại:"
                    android:textStyle="italic"
                    android:textColor="#818181"/>
                <TextView
                    android:id="@+id/admin_order_sodienthoai"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:textStyle="bold"
                    android:text="Số điện thoại"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Địa chỉ nhận:"
                    android:textStyle="italic"
                    android:textColor="#818181"/>
                <TextView
                    android:id="@+id/admin_order_diachinhan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:textStyle="bold"
                    android:text="Địa chỉ nhận"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Thực đơn:"
                    android:textStyle="italic"
                    android:textColor="#818181"/>
                <TextView
                    android:id="@+id/admin_order_thucdon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:textStyle="bold"
                    android:text="Thực đơn"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Ngày đặt hàng:"
                    android:textStyle="italic"
                    android:textColor="#818181"/>
                <TextView
                    android:id="@+id/admin_order_ngaydathang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:textStyle="bold"
                    android:text="Ngày đặt hàng"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Tình trạng:"
                    android:textStyle="italic"
                    android:textColor="#818181"/>
                <TextView
                    android:id="@+id/admin_order_tinhtrangdonhang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:textStyle="bold"
                    android:text="Tình trạng đơn hàng"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Thành tiền:"
                    android:textStyle="italic"
                    android:textColor="#818181"/>
                <TextView
                    android:id="@+id/admin_order_thanhtien"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:textStyle="bold"
                    android:textColor="#FDBA38"
                    android:text="Thành tiền"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Phương thức thanh toán:"
                    android:textStyle="italic"
                    android:textColor="#818181"/>
                <TextView
                    android:id="@+id/admin_order_phuongthucthanhtoan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:textStyle="bold"
                    android:text="Phương thức thanh toán"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <Button
                android:id="@+id/admin_order_button_order_cencel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giao hàng thất bại"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/admin_order_button_update_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tinh trang don hang"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FDBA38"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>