<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageAvatar"
            android:layout_width="220dp"
            android:radius="25dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_corners"
            android:padding="0dp"
            android:src="@drawable/doan1" />

        <TextView
            android:id="@+id/txtphantram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Giảm 15%"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_light"
            android:padding="4dp"
            android:layout_marginTop="-40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txttenmonan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bò cuộn phô mai"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="13dp" />

        <TextView
            android:id="@+id/txtgiachinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250.000 VNĐ"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/txtgiagiam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="213.000 VNĐ"
            android:textSize="16sp"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:layout_marginTop="2dp" />
    </LinearLayout>

</LinearLayout>