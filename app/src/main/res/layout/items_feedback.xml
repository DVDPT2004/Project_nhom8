<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Thông tin người dùng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/userfeedback"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"
                android:contentDescription="Avatar của người dùng"
                android:background="@android:color/darker_gray"
                android:padding="4dp"
                android:clipToOutline="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên người dùng"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtFeedbackDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày gửi phản hồi"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>

        <!-- Nội dung phản hồi -->
        <TextView
            android:id="@+id/txtFeedbackContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung phản hồi của người dùng sẽ hiển thị ở đây. Nội dung có thể dài ngắn tùy thuộc vào phản hồi của người dùng."
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black" />

        <!-- Hình ảnh media -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/idmedia1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Media 1"
                android:adjustViewBounds="true"/>

            <ImageView
                android:id="@+id/idmedia2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Media 2"
                android:adjustViewBounds="true"/>

            <ImageView
                android:id="@+id/idmedia3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Media 3"
                android:adjustViewBounds="true"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
