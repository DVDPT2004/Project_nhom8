<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.OtpForgotPassWord">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Vui lòng nhập mã mà chúng tôi đã gửi đến email của bạn"
        android:textColor="#66000000"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ email"
        android:textColor="#66000000"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/FgotEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textColor="#CC000000"
        android:text="Test@mail.com"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center">
        <EditText
            android:id="@+id/otpEt1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/roud_back_dark_blue5_15"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30sp"
            android:maxLength="1"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/otpEt2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/roud_back_dark_blue5_15"
            android:inputType="number"
            android:maxLines="1"
            android:layout_marginStart="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30sp"
            android:maxLength="1"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/otpEt3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/roud_back_dark_blue5_15"
            android:inputType="number"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:maxLength="1"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"/>


        <EditText
            android:id="@+id/otpEt4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/roud_back_dark_blue5_15"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="1"
            android:layout_marginStart="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"/>



    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/forgotBtn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/roud_back_primary_15"
        android:text="Tiếp Tục"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa nhận OTP?"/>
        <TextView
            android:id="@+id/resendBtn"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gửi Lại Mã"
            android:textColor="@color/primary"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>