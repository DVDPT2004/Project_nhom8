<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/admin_food"
    tools:context="Admin.Phuoc.admin_home.AdminEditItemActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lavender">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Cập nhật món ăn"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center|bottom"
                    android:layout_gravity="top"
                    android:paddingBottom="10dp"/>
                <ImageView
                    android:id="@+id/edit_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_backspace_24"
                    android:layout_gravity="center|bottom|left"
                    android:paddingBottom="10dp"
                    android:layout_marginStart="5dp"
                    android:clickable="true"
                    android:focusable="true"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tên món ăn(*)"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/admin_name_edit_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tên..."
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="15sp"
                    android:padding="12dp"
                    android:background="@drawable/border_background"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Danh mục(*)"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <Spinner
                        android:id="@+id/admin_category_edit_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/border_background"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="12dp"
                        android:spinnerMode="dropdown"
                        android:textSize="15sp"
                        />
                    <Button
                        android:id="@+id/admin_edit_category"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/baseline_playlist_add_circle_24"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Mô tả món ăn(*)"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/admin_description_edit_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mô tả..."
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="15sp"
                    android:padding="12dp"
                    android:background="@drawable/border_background"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Giá món ăn(*)"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/admin_price_edit_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Giá..."
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="15sp"
                    android:padding="12dp"
                    android:background="@drawable/border_background"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Khuyến mại(*)"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/admin_discount_edit_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Khuyến mại... %"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="15sp"
                    android:padding="12dp"
                    android:background="@drawable/border_background"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tình trạng(*)"
                    android:textSize="15sp"/>
                <Spinner
                    android:id="@+id/admin_status_edit_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/border_background"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="12dp"
                    android:spinnerMode="dropdown"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hình ảnh món ăn(*)"
                    android:textSize="15sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/edit_imageView_main"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="Selected Image"
                        android:scaleType="centerCrop"
                        android:background="@android:color/darker_gray" />
                    <Button
                        android:id="@+id/edit_imageMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chọn ảnh"
                        android:layout_gravity="end|center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hình ảnh khác(*)"
                        android:textSize="15sp" />

                    <GridLayout
                        android:id="@+id/edit_listView_image_sub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:columnCount="3"
                        android:rowCount="1"
                        android:orientation="horizontal" />

                    <Button
                        android:id="@+id/edit_imageSubsidiary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chọn ảnh"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/admin_edit_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cập nhật"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
