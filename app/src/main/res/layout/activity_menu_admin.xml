<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Admin.Phuoc.MainActivityAdmin">

    <!-- Nội dung chính hiển thị trong FrameLayout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_layout"
        android:paddingBottom="80dp"

        />

    <!-- BottomAppBar nằm dưới cùng của màn hình -->
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#404040"
        >

        <!-- BottomNavigationView để hiển thị menu -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            app:labelVisibilityMode="labeled"
            android:background="#FDBA38"
            app:menu="@menu/bottom_menu_admin"
            android:gravity="center_vertical"
            />
    </com.google.android.material.bottomappbar.BottomAppBar>

    <!-- FloatingActionButton được neo vào BottomAppBar -->


</androidx.coordinatorlayout.widget.CoordinatorLayout>
